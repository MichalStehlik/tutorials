@page
@model DatabaseASP.Pages.AddMovieModel
@{
    ViewData["Title"] = "AddMovie";
}

<h1>Přidej film</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MVM.Name" class="control-label"></label>
                <input asp-for="MVM.Name" class="form-control" />
                <span asp-validation-for="MVM.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MVM.gender" class="control-label"></label>
                <input asp-for="MVM.gender" class="form-control" />
                <span asp-validation-for="MVM.gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MVM.release"></label>
                <input asp-for="MVM.release" class="form-control" />
                <span asp-validation-for="MVM.release" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
